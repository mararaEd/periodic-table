{
  "name": "periodic-table",
  "version": "1.0.0",
  "description": "Informative periodic table",
  "main": "index.js",
  "scripts": {
    "start": "sass sass/main.scss public/css/style.css --watch",
    "st": "nodemon server.js",
    "live": "live-server",
    "compile:sass": "sass sass/main.scss css/style.comp.css",
    "prefix:css": "npx postcss css/style.comp.css --use autoprefixer -d css",
    "compress:css": "cleancss -o css/style.css css/style.comp.css",
    "build:css": "npm-run-all compile:sass prefix:css compress:css delete:css",
    "watch:js": "parcel watch ./public/js/index.js --out-dir ./public/js --out-file bundle.js",
    "build:js": "parcel build ./public/js/index.js --out-dir ./public/js --out-file bundle.js"
  },
  "author": "Marara Edosa",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.21.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.12.3",
    "npm-run-all": "^4.1.5",
    "pug": "^3.0.2"
  },
  "devDependencies": {
    "core-js": "^2.6.11",
    "nodemon": "^2.0.7",
    "parcel-bundler": "^1.12.3"
  }
}
